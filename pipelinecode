pipeline {
    agent any

    parameters {
        choice(
            name: 'ACTION',
            choices: ['apply', 'destroy'],
            description: 'Select whether to apply or destroy the Terraform infrastructure'
        )
    }

    environment {
        AWS_ACCESS_KEY_ID     = credentials('accesskey')
        AWS_SECRET_ACCESS_KEY = credentials('secretkey')
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/devopsbyraham/terraform-project.git'
            }
        }

        stage('Init') {
            steps {
                sh 'terraform init'
            }
        }

        stage('Validate') {
            steps {
                sh 'terraform validate'
            }
        }

        stage('Plan') {
            steps {
                sh "terraform plan"
            }
        }

        stage('Action') {
            steps {
                script {
                    sh "terraform ${params.ACTION} --auto-approve"
                }
            }
        }
    }
}
